<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.pmdproject.MainActivity">

    <!-- ViewPager yang di-custom dengan nama kelas UnSwipeableViewPager, dimana ViewPager tidak bisa digeser -->
    <com.example.user.pmdproject.UnSwipeableViewPager
        android:id="@+id/mainvp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bnve">

    </com.example.user.pmdproject.UnSwipeableViewPager>

    <!-- BottomNavigationViewEx: BottomNavigationView yang di-custom -->
    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bnve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@color/black"
        app:menu="@menu/menu_main" />

</RelativeLayout>
